{
  "$schema": "https://raw.githubusercontent.com/qiu8310/minapp/master/schema/component.json",
  "component": true,
  "minapp": {
    "component": {
      "desc": [
        "minapp 示例 toast 组件"
      ],
      "attrs": [
        {
          "name": "message",
          "type": {
            "name": "string"
          },
          "desc": [
            "toast 显示内容"
          ]
        },
        {
          "name": "visible",
          "type": {
            "name": "boolean"
          },
          "desc": [
            "是否显示 toast"
          ]
        },
        {
          "name": "timeout",
          "type": {
            "name": "number"
          },
          "defaultValue": 5,
          "desc": [
            "toast 显示时间，单位秒"
          ]
        }
      ]
    }
  }
}
